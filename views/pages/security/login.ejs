<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('../../components/head'); %>
  </head>
  <body class="bg-light">
    <div class="d-flex align-items-center justify-content-center vh-100">
      <div class="card" style="width: 22rem">
        <div class="card-body">
          <div class="d-flex justify-content-center">
            <img src="../images/logo-xassaid.png" width="180" />
          </div>
          <form method="POST" action="/security/login">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Adresse e-mail</label
              >
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                placeholder="nom@email.com"
                autocomplete="email"
              />
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Mot de passe</label
              >
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
                placeholder="*************"
                autocomplete="current-password"
              />
            </div>
            <div class="d-flex align-items-center justify-content-center">
              <button class="mt-3 btn btn-success" type="submit">
                Soumettre
              </button>
            </div>
            <p class="text-center text-danger fw-bold mt-3">
              <% if(messages.error) { %> <%= messages.error %> <% } %>
            </p>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
